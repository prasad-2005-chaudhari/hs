name: run java and python programs

on:
  push:
    branches:
      - main

jobs:
  run-all:
    runs-on: ubuntu-latest

    steps:
      # checkout repository code
      - name: checkout code 
        uses: actions/checkout@v4

      # set up python
      - name: set up python
        uses: actions/checkout@v5
        with:
          python-version: '3.10'

      # run first python script
      - name: run hello.py 1
        run: python hellp.py
      # run second python script
      - name: run hello.py 2
        run: python hellp.py
      
